<%- include('./partials/_header') %>
    <body id="page-top">
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
            <div class="container">
                <a class="navbar-brand" href="/"><img src="/assets/img/navbar-logo.svg" alt="..." /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars ms-1"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav text-uppercase ms-auto py-4 py-lg-0">
                        <li class="nav-item"><a class="nav-link" href="#services">Services</a></li>
                        <li class="nav-item"><a class="nav-link" href="#portfolio">Portfolio</a></li>
                        <li class="nav-item"><a class="nav-link" href="#about">About</a></li>
                        <li class="nav-item"><a class="nav-link" href="#team">Team</a></li>
                        <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>
                        <li class="nav-item"><a class="nav-link" href="/add">Add</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Masthead-->
        <header class="masthead">
            <div class="container">
                <div class="masthead-subheading">Welcome To Our Studio!</div>
                <div class="masthead-heading text-uppercase">It's Nice To Meet You</div>
                <a class="btn btn-primary btn-xl text-uppercase" href="#services">Tell Me More</a>
            </div>
        </header>

        <section class="page-section" id="contact">
            <div class="container">
                <div class="text-center">
                    <h2 class="section-heading text-uppercase">Add Portfolio</h2>
                    <h3 class="section-subheading text-muted">Fill in the blanks properly.</h3>
                </div>

                <form id="contactForm" enctype="multipart/form-data" method="post" action="/edit-project/<%= portfolio.id %>">
                    <div class="row align-items-stretch mb-5">
                        <div class="col-md-6">
                            <div class="form-group">
                                <!-- Name input-->
                                <input class="form-control" value="<%= portfolio.name %>" name="name" id="name" type="text" placeholder="Your Name *" />
                            </div>
                            <div class="form-group">
                                <!-- Category select -->
                                <select class="form-control"  name="category" id="category">
                                    <option value="">Choose a category</option>
                                    <option <%= portfolio.category == "Physics" ? 'selected' : '' %> value="Physics">Physics</option>
                                    <option <%= portfolio.category == "Mathematics" ? 'selected' : '' %> value="Mathematics">Mathematics</option>
                                    <option <%= portfolio.category == "Biology" ? 'selected' : '' %> value="Biology">Biology</option>
                                    <option <%= portfolio.category == "Chemistry" ? 'selected' : '' %> value="Chemistry">Chemistry</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <!-- Current photo preview -->
                                <label for="photo">Current Photo:</label>
                                <img class="mx-3" src="/uploads/<%= portfolio.photo %>" alt="Current Portfolio Photo" style="width: 300px; height: 300px;" />
                                <br/>
                                <!-- File input -->
                                <input class="form-control mt-3" name="photo" id="photo" type="file" />
                            </div>
                            <div class="form-group ">
                                <!-- Email address input-->
                                <input class="form-control" name="email" id="email" value="<%= portfolio.email %>" type="email" placeholder="Your Email *" />
                            </div>
                        
                        </div>
                        <div class="col-md-6">
                            <div class="form-group form-group-textarea mb-md-0">
                                <!-- Message input-->
                                <textarea class="form-control" name="description" id="message" placeholder="Description *"> <%= portfolio.description %>  </textarea>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary btn-xl text-uppercase" id="submitButton" type="submit">Save Portfolio</button>
                    </div>
                </form>
            </div>
        </section>


        <!-- Contact-->
       
       <%- include('./partials/_footer') %>
      
       
      <%- include('./partials/_endOfFile') %>