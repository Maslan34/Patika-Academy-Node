<%  portfolios.forEach( (element,index) => { %>   
            

    <div class="portfolio-modal modal fade" id="portfolioModal<%=index %>" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="close-modal" data-bs-dismiss="modal"><img src="assets/img/close-icon.svg" alt="Close modal" /></div>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="modal-body">
                                <!-- Project details-->
                                <h2 class="text-uppercase"></h2>
                                <p class="item-intro text-muted"e> <strong>Portfolip Name:</strong><%= element.name %></p>
                                <img class="img-fluid d-block mx-auto" src="/uploads/<%= element.photo %>" alt="..." />
                                <p>  <strong>Desciription:</strong><%= element.description %> </p>
                                <ul class="list-inline">
                                    <li>
                                        <strong>Email:</strong>
                                        <%= element.email %>
                                    </li>
                                    <li>
                                        <strong>Category:</strong>
                                        <%= element.category %>
                                    </li>
                                    <li>
                                        <strong>Created At:</strong>
                                        <%= element.dateCreated %>
                                    </li>
                                    <li>
                                        <strong>Last Modified At:</strong>
                                        <%= element.dateUptated %>
                                    </li>
                                </ul>
                                <button class="btn btn-primary btn-xl text-uppercase" data-bs-dismiss="modal" type="button">
                                    <i class="fas fa-xmark me-1"></i>
                                    Close Project
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    
    <% }); %>